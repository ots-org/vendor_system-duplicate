<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/donationProductName"
            android:layout_width="@dimen/activity_margin_100"
            android:layout_height="wrap_content"
            android:text="@string/productname"
            android:gravity="center"
            android:padding="@dimen/activity_margin_4"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_300"
            />
        <TextView
            android:id="@+id/donationProductPrice"
            android:layout_width="@dimen/activity_margin_100"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:gravity="center"
            android:padding="@dimen/activity_margin_4"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_300"
            />
        <TextView
            android:id="@+id/donationAmount"
            android:layout_width="@dimen/activity_margin_100"
            android:layout_height="wrap_content"
            android:text="Donation Amount"
            android:gravity="center"
            android:padding="@dimen/activity_margin_4"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_300"
            />
        <TextView
            android:id="@+id/donatedQty"
            android:layout_width="@dimen/activity_margin_100"
            android:layout_height="wrap_content"
            android:text="Donated Quantity"
            android:gravity="center"
            android:padding="@dimen/activity_margin_4"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_300"
            />
        <TextView
            android:id="@+id/donationFirstName"
            android:layout_width="@dimen/activity_margin_100"
            android:layout_height="wrap_content"
            android:text="Donor Name"
            android:gravity="center"
            android:padding="@dimen/activity_margin_4"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_300"
            />
        <TextView
            android:id="@+id/donationAddress1"
            android:layout_width="@dimen/activity_margin_100"
            android:layout_height="wrap_content"
            android:text="Donor Address"
            android:gravity="center"
            android:padding="@dimen/activity_margin_4"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_300"
            />
        <TextView
            android:id="@+id/donationStatus"
            android:layout_width="@dimen/activity_margin_100"
            android:layout_height="wrap_content"
            android:text="Donor Status"
            android:gravity="center"
            android:padding="@dimen/activity_margin_4"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_300"
            />
        <TextView
            android:id="@+id/paymentMethod"
            android:layout_width="@dimen/activity_margin_100"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:gravity="center"
            android:padding="@dimen/activity_margin_4"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_300"
            />
    </LinearLayout>
</LinearLayout>