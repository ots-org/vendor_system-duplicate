        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingBottom="10dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/logo" />
