    <RelativeLayout
        android:id="@+id/firstNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/ots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_12"
            android:padding="@dimen/activity_margin_10"
            android:layout_alignParentBottom="true"
            android:text="Ortusolis Technology Services"
            android:textColor="@color/wallet_bright_foreground_holo_dark"
            android:textSize="@dimen/activity_margin_10" />

        <TextView
            android:id="@+id/firstNameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/activity_margin_100"
