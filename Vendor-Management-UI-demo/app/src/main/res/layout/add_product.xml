<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorPrimary" />
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/addProductDetails"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_margin_100"
            android:orientation="vertical"
            android:background="@color/light_gray"
            android:gravity="center"
            android:id="@+id/photoLL"
            >
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/textSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Product Photo"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/off_white"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:id="@+id/catLayout"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_10"
                android:text="Product Category"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_medium"
                />
            <TextView
                android:id="@+id/selectCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin_100"
                android:padding="@dimen/activity_margin_10"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:textSize="@dimen/text_size_medium"
                android:textAlignment="textEnd"
                android:hint="Category"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:maxLength="25"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/off_white"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:id="@+id/subCatLayout"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_10"
                android:text="Sub-Category"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_medium"
                />
            <TextView
                android:id="@+id/selectSubCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin_100"
                android:padding="@dimen/activity_margin_10"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:textSize="@dimen/text_size_medium"
                android:textAlignment="textEnd"
                android:hint="Sub-Category"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:maxLength="25"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/off_white"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_10"
                android:text="Product Name"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_medium"
                />
            <EditText
                android:id="@+id/productNameEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin_100"
                android:padding="@dimen/activity_margin_10"
                android:layout_alignParentRight="true"
                android:textAlignment="textEnd"
                android:background="@android:color/transparent"
                android:textSize="@dimen/text_size_medium"
                android:hint="Enter Product name"
                android:textColor="@color/textColor"
                android:textColorHint="@color/gray"
                android:maxLength="50"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/off_white"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_10"
                android:text="Product Description"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_medium" />
            <EditText
                android:id="@+id/productDescriptionEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin_150"
                android:padding="@dimen/activity_margin_10"
                android:textAlignment="textEnd"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/textColor"
                android:hint="Description"
                android:textColorHint="@color/gray"
                android:maxLength="100"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/off_white"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_10"
                android:text="Product price"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_medium"
                />
            <EditText
                android:id="@+id/productPriceEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin_100"
                android:padding="@dimen/activity_margin_10"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_medium"
                android:textAlignment="textEnd"
                android:textColor="@color/textColor"
                android:hint="Enter Product price"
                android:textColorHint="@color/gray"
                android:inputType="numberDecimal"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/off_white"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:id="@+id/gstLayoutProduct"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_10"
                android:text="GST"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_medium"
                />
            <EditText
                android:id="@+id/productPriceGSTEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin_100"
                android:padding="@dimen/activity_margin_10"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:textAlignment="textEnd"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/textColor"
                android:hint="Enter GST"
                android:textColorHint="@color/gray"
                android:inputType="numberDecimal"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/off_white"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:id="@+id/finalPriceLayoutProduct"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_10"
                android:text="Final Product Price"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_medium"
                />
            <EditText
                android:id="@+id/finalProductPriceGSTEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin_100"
                android:padding="@dimen/activity_margin_10"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_medium"
                android:textAlignment="textEnd"
                android:textColor="@color/textColor"
                android:hint="Enter Final Product price"
                android:textColorHint="@color/gray"
                android:inputType="numberDecimal"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/off_white"
            />
        <Button
            android:id="@+id/addProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Add product"
            android:padding="@dimen/activity_margin_10"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_large"
            android:gravity="center"
            android:textAllCaps="false"
            android:background="@drawable/borderless_button"
            android:layout_margin="@dimen/activity_margin_10"
            />
        <!---->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/requestProductLayout"
            android:visibility="gone"
            >

            <Button
                android:id="@+id/cancelRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cancel Request"
                android:layout_weight="1"
                android:padding="@dimen/activity_margin_10"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_large"
                android:textAllCaps="false"
                android:background="@drawable/borderless_button"
                android:layout_margin="@dimen/activity_margin_10"
                />
            <Button
                android:id="@+id/confirmRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Confirm Request"
                android:layout_weight="1"
                android:padding="@dimen/activity_margin_10"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_large"
                android:textAllCaps="false"
                android:background="@drawable/borderless_button"
                android:layout_margin="@dimen/activity_margin_10"
                />
            <!---->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/bulkLayout"
            android:visibility="gone"
            >

            <Button
                android:id="@+id/bulkUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Bulk Upload"
                android:padding="@dimen/activity_margin_10"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_large"
                android:textAllCaps="false"
                android:background="@drawable/borderless_button"
                android:layout_margin="@dimen/activity_margin_10"
                />
            <!---->
    </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>

</LinearLayout>