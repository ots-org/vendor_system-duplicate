<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorPrimary" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation"
        android:layout_margin="@dimen/activity_margin_6"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/activity_margin_8">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/activity_margin_2"
                    android:layout_marginBottom="@dimen/activity_margin_2"
                    android:background="@color/light_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/activity_margin_8"
                        android:id="@+id/orderNumberText"
                        android:text="@string/ordernumber"
                        android:textColor="@color/textColorDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/activity_margin_8" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/activity_margin_2"
                    android:layout_marginBottom="@dimen/activity_margin_2"
                    android:background="@color/light_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/activity_margin_8"
                        android:text="@string/orderdate"
                        android:id="@+id/orderDateText"
                        android:textColor="@color/textColorDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/orderDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/activity_margin_8" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/activity_margin_2"
                    android:layout_marginBottom="@dimen/activity_margin_2"
                    android:background="@color/light_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/activity_margin_8"
                        android:text="@string/deliverydate"
                        android:textColor="@color/textColorDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/deliveryDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/activity_margin_8" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/activity_margin_2"
                    android:layout_marginBottom="@dimen/activity_margin_2"
                    android:background="@color/light_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/activity_margin_8"
                        android:text="@string/ordercost"
                        android:id="@+id/orderCostText"
                        android:textColor="@color/textColorDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/orderCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/activity_margin_8" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/activity_margin_2"
                    android:layout_marginBottom="@dimen/activity_margin_2"
                    android:background="@color/light_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/activity_margin_8"
                        android:text="@string/orderstatus"
                        android:id="@+id/orderStatusText"
                        android:textColor="@color/textColorDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/orderStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/activity_margin_8" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/activity_margin_2"
                    android:layout_marginBottom="@dimen/activity_margin_2"
                    android:background="@color/light_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/activity_margin_8"
                        android:text="Customer Name"
                        android:textColor="@color/textColorDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/customerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/activity_margin_8" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/activity_margin_2"
                    android:layout_marginBottom="@dimen/activity_margin_2"
                    android:background="@color/light_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/activity_margin_8"
                        android:text="Customer Phone Number"
                        android:textColor="@color/textColorDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/customerPhoneNmuber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/activity_margin_8" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/activity_margin_2"
                    android:layout_marginBottom="@dimen/activity_margin_2"
                    android:background="@color/light_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/activity_margin_8"
                        android:text="Primary Address"
                        android:textColor="@color/textColorDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/customerAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/activity_margin_8" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/activity_margin_2"
                    android:layout_marginBottom="@dimen/activity_margin_2"
                    android:background="@color/light_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/activity_margin_8"
                        android:text="Secondary Address"
                        android:textColor="@color/textColorDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/customerAddressSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/activity_margin_8" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/activity_margin_2"
                    android:layout_marginBottom="@dimen/activity_margin_2"
                    android:background="@color/light_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/activity_margin_8"
                        android:text="@string/assignemployee"
                        android:textColor="@color/textColorDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/assignEmpLoyee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/activity_margin_8"
                        android:text="@string/selectemployee"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/activity_margin_2"
                    android:layout_marginBottom="@dimen/activity_margin_2"
                    android:background="@color/light_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/donarLayout"
                    >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/activity_margin_8"
                        android:text="Customer Name"
                        android:textColor="@color/textColorDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/donarName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/activity_margin_8" />

                </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/activity_margin_2"
                        android:layout_marginBottom="@dimen/activity_margin_2"
                        android:background="@color/light_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/activity_margin_8"
                        android:text="Customer Address"
                        android:textColor="@color/textColorDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/donarAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/activity_margin_8" />

                </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/activity_margin_2"
                        android:layout_marginBottom="@dimen/activity_margin_2"
                        android:background="@color/light_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/activity_margin_8"
                        android:text="Customer Phone Number"
                        android:textColor="@color/textColorDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/donarPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/activity_margin_8" />

                </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/activity_margin_2"
                        android:layout_marginBottom="@dimen/activity_margin_2"
                        android:background="@color/light_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/activity_margin_8"
                        android:text="Donation Status"
                        android:textColor="@color/textColorDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/donarPaymentMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/activity_margin_8" />

                </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/activity_margin_2"
                        android:layout_marginBottom="@dimen/activity_margin_2"
                        android:background="@color/light_gray" />
                </LinearLayout>


            </LinearLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <GridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:verticalSpacing="0dp"
                android:horizontalSpacing="0dp"
                android:stretchMode="columnWidth"
                android:numColumns="2"/>
            <TextView
                android:id="@+id/noResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/noorders"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_margin="@dimen/activity_margin_10"
                android:textSize="@dimen/text_size_medium"
                />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0"
        android:layout_gravity="bottom"
        >
    <Button
        android:id="@+id/cancelOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large"
        android:gravity="center"
        android:textAllCaps="false"
        android:background="@drawable/borderless_button"
        android:layout_margin="@dimen/activity_margin_6"
        android:text="@string/cancelorder"
        />

        <Button
        android:id="@+id/placeOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large"
        android:gravity="center"
        android:textAllCaps="false"
        android:background="@drawable/borderless_button"
        android:layout_margin="@dimen/activity_margin_6"
        android:text="@string/assigntheorder"
        />
        <Button
            android:id="@+id/closeOrderAssignOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_large"
            android:gravity="center"
            android:textAllCaps="false"
            android:background="@drawable/borderless_button"
            android:layout_margin="@dimen/activity_margin_6"
            android:text="@string/closeorder"
            />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>