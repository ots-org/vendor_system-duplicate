<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorPrimary" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addProductDetails"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/off_white"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin_10"
                    android:text="Donor Name"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium"
                    />

                <TextView
                    android:id="@+id/donarName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/activity_margin_100"
                    android:background="@android:color/transparent"
                    android:maxLength="25"
                    android:padding="@dimen/activity_margin_10"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/text_size_medium" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/off_white"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin_10"
                    android:text="Donor Address"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium"
                    />
                <TextView
                    android:id="@+id/donarAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin_100"
                    android:padding="@dimen/activity_margin_10"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/text_size_medium"

                    android:textColor="@color/textColor"
                    android:textColorHint="@color/gray"
                    android:maxLength="25"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/off_white"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/off_white"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin_10"
                    android:text="Donor Phone Number"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium" />
                <TextView
                    android:id="@+id/donarPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin_100"
                    android:padding="@dimen/activity_margin_10"
                    android:background="@android:color/transparent"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/gray"
                    android:maxLength="50"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/off_white"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin_10"
                    android:text="Donor Quantity"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium" />
                <TextView
                    android:id="@+id/donarQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin_100"
                    android:padding="@dimen/activity_margin_10"
                    android:background="@android:color/transparent"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/gray"
                    android:maxLength="50"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/off_white"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin_10"
                    android:text="Donor Amount"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium"
                    />
                <TextView
                    android:id="@+id/donarAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin_100"
                    android:padding="@dimen/activity_margin_10"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/text_size_medium"

                    android:textColor="@color/textColor"
                    android:textColorHint="@color/gray"
                    android:maxLength="25"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/off_white"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin_10"
                    android:text="Product Name"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium"
                    />

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/activity_margin_100"
                    android:background="@android:color/transparent"

                    android:maxLength="25"
                    android:padding="@dimen/activity_margin_10"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/text_size_medium" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/off_white"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/off_white"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin_10"
                    android:text="Product Price"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium" />
                <TextView
                    android:id="@+id/productprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin_100"
                    android:padding="@dimen/activity_margin_10"
                    android:background="@android:color/transparent"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/textColor"

                    android:textColorHint="@color/gray"
                    android:maxLength="50"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/off_white"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/empLayout"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_margin_8"
                    android:text="@string/assignemployee"
                    android:textColor="@color/textColorDark"
                    />

                <TextView
                    android:id="@+id/assignEmpLoyee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="@dimen/activity_margin_8"
                    android:text="@string/selectemployee"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/off_white"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_margin_28"
                android:id="@+id/buttonLayout"
                android:orientation="horizontal">
            <Button
                android:id="@+id/assign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="Assign"
                android:padding="@dimen/activity_margin_10"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_large"
                android:gravity="center"
                android:textAllCaps="false"
                android:background="@drawable/borderless_button"
                android:layout_margin="@dimen/activity_margin_10"
                />
                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Receive"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_margin_10"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:background="@drawable/borderless_button"
                    android:layout_margin="@dimen/activity_margin_10"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_margin_28"
                android:id="@+id/closeButtonLayout"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text="Close"
                    android:padding="@dimen/activity_margin_10"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:background="@drawable/borderless_button"
                    android:layout_margin="@dimen/activity_margin_10"
                    />

            </LinearLayout>
            <!---->

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>