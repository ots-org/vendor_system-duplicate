<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/customerName"
            android:layout_width="@dimen/activity_margin_100"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:gravity="center"
            android:padding="@dimen/activity_margin_4"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_300"
            />
        <TextView
            android:id="@+id/oustandingAmount"
            android:layout_width="@dimen/activity_margin_150"
            android:layout_height="wrap_content"
            android:text="Outstanding Amount"
            android:gravity="center"
            android:padding="@dimen/activity_margin_4"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_300"
            />
        <TextView
            android:id="@+id/productName"
            android:layout_width="@dimen/activity_margin_100"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:gravity="center"
            android:padding="@dimen/activity_margin_4"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_300"
            />
        <TextView
            android:id="@+id/outstandingCan"
            android:layout_width="@dimen/activity_margin_100"
            android:layout_height="wrap_content"
            android:text="Outstanding Can"
            android:gravity="center"
            android:padding="@dimen/activity_margin_4"
            />
    </LinearLayout>
</LinearLayout>