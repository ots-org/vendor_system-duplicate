        android:id="@+id/user1235"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1235"
        android:background="@drawable/border_light_primary"
        android:textColor="@color/colorPrimary"
        android:layout_margin="@dimen/activity_margin_4"
        />
    <Button
        android:id="@+id/user1236"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1236"
        android:background="@drawable/border_light_primary"
        android:textColor="@color/colorPrimary"
        android:layout_margin="@dimen/activity_margin_4"
        />
</LinearLayout>