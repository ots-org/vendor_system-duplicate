<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0">

  <persistence-unit name="iptModel" transaction-type="RESOURCE_LOCAL">
    <non-jta-data-source>iptDataSource</non-jta-data-source>
    <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
    <validation-mode>AUTO</validation-mode>

    <!-- OTS ENTITY CLASSES -->
    <class>com.fuso.enterprise.ots.srv.server.model.entity.TmpShikeisho</class>
    <class>com.fuso.enterprise.ots.srv.server.model.entity.TmpShikeishoPart</class>
    <class>com.fuso.enterprise.ots.srv.server.model.entity.TmpShikeishoPartEmbedded</class>
    <class>com.fuso.enterprise.ots.srv.server.model.entity.ShikeishoDetail</class>
    <class>com.fuso.enterprise.ots.srv.server.model.entity.ShikeishoDetailEmbedded</class>
    <class>com.fuso.enterprise.ots.srv.server.model.entity.ShikeishoPartDetail</class>
    <class>com.fuso.enterprise.ots.srv.server.model.entity.ShikeishoPartDetailEmbedded</class>
    
    <!---OTS ORM FILES -->

    <mapping-file>META-INF/ipt-sample-orm.xml</mapping-file>

  </persistence-unit>

</persistence>